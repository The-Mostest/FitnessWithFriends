<%- include("../partials/header.ejs") %>
    <%- include("../partials/nav.ejs") %>

    <div class="headerText">

        <h1> Edit</h1>
        <h3>If you realised you might be fibbing to your friends, you can edit your sessions here</h3>
        
    </div>


<div class="socialDisplay">

    
    <form action="/user/sessions/<%= session._id %>?_method=PUT" method="POST" id="editForm">
        <% session.exercises.forEach((exercise, index)=> { %>
            <div class="exerciseEdit">
                <input type="text" name="name" value="<%= exercise.name %>" id="tdName">
                
                
                <input type="number" name="sets" value="<%= exercise.sets %>" class="SRL">
                
                
                <input type="number" name="reps" value="<%= exercise.reps %>" class="SRL">
                
                
                <input type="number" name="load" value="<%= exercise.load %>" class="SRL">
            </div>
            <% }) %>
        </form>
        
        
        <button type="submit" form="editForm" id="editBut">
            <h3>Save Workout</h3>
        </button>
        
        
    </div>



