<%- include("../partials/header.ejs") %>
    <%- include("../partials/nav.ejs") %>

        <h1> SOCIALS</h1>
        <h2>Hello <%=user.username%>
        </h2>
        <br>

        <div class="socialDisplay">
            <% allSessions.forEach(session=> { %>
                <div class="socialsDiv">
                    <h3>
                        <%= session.user.username %>
                    </h3>

                    <table>
                        <tr>
                            <th>Exercise</th>
                            <th>Sets</th>
                            <th>Reps</th>
                            <th>Load</th>
                        </tr>
                        <% session.exercises.forEach(element=> { %>
                            <tr>
                                <td>
                                    <%=element.name%>
                                </td>
                                <td>
                                    <%=element.sets%>
                                </td>
                                <td>
                                    <%=element.reps%>
                                </td>
                                <td>
                                    <%=element.load%>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                    <% if (user && session.user._id.equals(user._id)) { %>

                        <form action="/user/sessions/<%=session._id%>?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                        </form>

                        <form action="/user/sessions/<%=session._id%>/edit" method="PUT">
                            <button type="submit">Edit</button>
                        </form>
                        <% } %>

                </div>
                <% }) %>
        </div>






        </body>

        </html>